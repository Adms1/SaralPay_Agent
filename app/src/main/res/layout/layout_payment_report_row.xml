<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="6dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/gray_border_in_white"
            android:gravity="center"
            android:textColor="@color/dark_blue"
            android:layout_marginLeft="3dp"
            android:padding="5dp"
            android:text="Date" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/gray_border_in_white"
            android:textColor="@color/dark_blue"
            android:gravity="center"
            android:layout_marginLeft="3dp"
            android:visibility="visible"
            android:padding="5dp"
            android:text="T.ID" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="3dp"
            android:textColor="@color/dark_blue"
            android:background="@drawable/gray_border_in_white"
            android:gravity="center"
            android:padding="5dp"
            android:text="Amount" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="3dp"
            android:background="@drawable/gray_border_in_white"
            android:gravity="center"
            android:padding="5dp"
            android:text="Charge"
            android:visibility="gone" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="3dp"
            android:background="@drawable/gray_border_in_white"
            android:textColor="@color/dark_blue"
            android:gravity="center"
            android:padding="5dp"
            android:text="Tax"
            android:visibility="gone" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="3dp"
            android:background="@drawable/gray_border_in_white"
            android:gravity="center"
            android:visibility="gone"
            android:padding="5dp"
            android:textColor="@color/dark_blue"
            android:text="FinalAmt" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="3dp"
            android:background="@drawable/gray_border_in_white"
            android:gravity="center"
            android:padding="5dp"
            android:text="Status"
            android:textColor="@color/dark_blue"
            android:id="@+id/textView" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="2"
            android:textColor="@color/dark_blue"
            android:background="@drawable/gray_border_in_white"
            android:layout_marginLeft="3dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="Date" />
        <TextView
            android:id="@+id/txtDtDep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="2"
            android:layout_marginLeft="3dp"
            android:background="@drawable/gray_border_in_white"
            android:gravity="center"
            android:textColor="@color/dark_blue"
            android:visibility="visible"
            android:padding="5dp"
            android:text="T.ID" />

        <TextView
            android:id="@+id/txtAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="2"
            android:background="@drawable/gray_border_in_white"
            android:layout_marginLeft="3dp"
            android:gravity="center"
            android:textColor="@color/dark_blue"
            android:padding="5dp"
            android:text="Amount" />

        <TextView
            android:id="@+id/txtTaxAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:background="@drawable/gray_border_in_white"
            android:textColor="@color/dark_blue"
            android:layout_marginLeft="3dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="Tax"
            android:visibility="gone" />
        <TextView
            android:id="@+id/txtFinalAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="2"
            android:background="@drawable/gray_border_in_white"
            android:layout_marginLeft="3dp"
            android:textColor="@color/dark_blue"
            android:visibility="gone"
            android:gravity="center"
            android:padding="5dp"
            android:text="FinalAmt" />
        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="2"
            android:background="@drawable/gray_border_in_white"
            android:layout_marginLeft="3dp"
            android:textColor="@color/dark_blue"
            android:gravity="center"
            android:padding="5dp"
            android:text="Status" />

        <TextView
            android:id="@+id/txtCharge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:background="@drawable/gray_border_in_white"
            android:layout_marginLeft="3dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="Charge"
            android:visibility="gone" />




    </LinearLayout>
</LinearLayout>